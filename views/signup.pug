extends layout
block content

    style.
       .form-container{
            padding: 80px 0;
           }
       .form-container {
             display: table;
             max-width: 900px;
             width: 60%;
             margin: 0 auto;
             box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
           }

      @media (min-width: 300px) {
         .form-container {
                                  display: table;
                                  max-width: 900px;
                                  width: 90%;
                                  margin: 0 auto;
                                  box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
                                }
      }

      @media (min-width: 576px) {
         .form-container {
                                  display: table;
                                  max-width: 900px;
                                  width: 60%;
                                  margin: 0 auto;
                                  box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
                                }
      }

      @media (min-width: 768px) {
          .form-container {
                                 display: table;
                                 max-width: 900px;
                                 width: 40%;
                                 margin: 0 auto;
                                 box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
                               }
      }
      @media (min-width: 992px) {
                       .form-container {
                        display: table;
                        max-width: 900px;
                        width: 40%;
                        margin: 0 auto;
                        box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
                      }
                    }
      @media (min-width: 1200px) {
          .form-container {
                          display: table;
                          max-width: 900px;
                          width: 30%;
                          margin: 0 auto;
                          box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
                        }
            }
      .form-container form {
             display: table-cell;
             width: 400px;
             background-color: #ffffff;
             padding: 40px 60px;
             color: #3399ff;
           }
      .form-container form h2 {
             font-size: 24px;
             line-height: 1.5;
             margin-bottom: 30px;
           }
      .form-container form .form-control {
             background: #f7f9fc;
             border: none;
             border-bottom: 1px solid #dfe7f1;
             border-radius: 0;
             box-shadow: none;
             outline: none;
             color: black;
             text-indent: 6px;
             height: 40px;
           }
      .form-container form .form-check {
             font-size: 13px;
             line-height: 20px;
           }
      .form-container form .btn-primary {
         background: #3399ff;
         border: none;
         border-radius: 4px;
         padding: 11px;
         box-shadow: none;
         margin-top: 35px;
         text-shadow: none;
         outline: none !important;
       }
      .form-container form .btn-primary:hover, .register-photo form .btn-primary:active {
         background: #3399ff;
       }
      .form-container form .btn-primary:active {
         transform: translateY(1px);
       }
      .form-container form .already {
         display: block;
         text-align: center;
         font-size: 12px;
         color: #3399ff;
         opacity: 0.9;
         text-decoration: none;
       }

    .register-photo
        .form-container
            form(method='post')
              h2.text-center
                strong Create
                |  an account.
              .form-group
                input.form-control(type='email' name='email' placeholder='Email')
              .form-group
                input.form-control(type='password' name='password' placeholder='Password')
              .form-group
                input.form-control(type='password' name='password-repeat' placeholder='Password (repeat)')
              .form-group
                .form-check
                  label.form-check-label
                    input.form-check-input(type='checkbox')
                    | I agree to the license terms.
              .form-group
                button.btn.btn-primary.btn-block(type='submit') Sign Up
              a.already(href='#') You already have an account? Login here.



